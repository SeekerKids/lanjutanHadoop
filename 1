#pig
wget https://dlcdn.apache.org/pig/pig-0.17.0/pig-0.17.0.tar.gz
tar xvzf pig-0.17.0.tar.gz
sudo mv /home/namauser/pig-0.17.0 /home/namauser/pig
sudo nano .bashrc

#PIG settings
export PIG_HOME=/home/namauser/pig
export PATH=$PATH:$PIG_HOME/bin
export PIG_CLASSPATH=$PIG_HOME/conf:$HADOOP_INSTALL/etc/hadoop/
export PIG_CONF_DIR=$PIG_HOME/conf
export JAVA_HOME=/usr/lib/jvm/java-8-openjdk-amd64
export PIG_CLASSPATH=$PIG_CONF_DIR:$PATH
#PIG setting ends

source .bashrc

cd /usr/share/Hadoop/sbin/
#nyalain para budak

start-dfs.sh
start-yarn.sh
jps

cd
pig
quit;
pig -version
stop-all.sh

#hive
https://docs.celonis.com/en/connecting-to-apache-hive---apache-hadoop.html

wget https://downloads.apache.org/hive/hive-4.0.1/apache-hive-4.0.1-bin.tar.gz
tar xzf apache-hive-4.0.1-bin.tar.gz
sudo nano .bashrc

export HIVE_HOME=/home/namauser/apache-hive-4.0.1-bin
export PATH=$PATH:$HIVE_HOME/bin

source .bashrc
sudo nano $HIVE_HOME/bin/hive-config.sh

export HADOOP_HOME=/usr/share/Hadoop
//export HADOOP_HOME=/usr/share/Hadoop/etc/hadoop


#The temporary, tmp directory is going to store the intermediate results of Hive processes.
hdfs dfs -mkdir /tmp
hdfs dfs -chmod g+w /tmp
#The warehouse directory is going to store the Hive related tables.
hdfs dfs -mkdir -p /user/hive/warehouse
hdfs dfs -chmod g+w /user/hive/warehouse

/* bawah ini ga usah sih, buat trial aja
rm $HIVE_HOME/lib/guava-19.0 .jar
cp $HADOOP_HOME/share/hadoop/hdfs/lib/guava-27.0-jre.jar $HIVE_HOME/lib

cd ~/apache-hive-3.1.2-bin/bin
$schematool -initSchema -dbType derby
*/ ampe ini

hive

#hbase
wget https://archive.apache.org/dist/hbase/2.6.1/hbase-2.6.1-bin.tar.gz
tar xzvf hbase-2.6.1-bin.tar.gz
cd hbase-2.6.1/
sudo nano conf/hbase-env.sh

export JAVA_HOME=/usr/lib/jvm/java-8-opendk-amd64

cd hbase-2.6.1/bin/
./start-hbase.sh
./hbase shell
./stop-hbase.sh

#flume
wget https://archive.apache.org/dist/flume/1.9.0/apache-flume-1.9.0-bin.tar.gz
tar xzvf apache-flume-1.9.0-bin.tar.gz
sudo mv apache-flume-1.9.0-bin flume

#Sqoop
wget https://archive.apache.org/dist/sqoop/1.4.7/sqoop-1.4.7.bin__hadoop-2.6.0.tar.gz
tar xzvf sqoop-1.4.7.bin__hadoop-2.6.0.tar.gz
sudo mv sqoop-1.4.7.bin__hadoop-2.6.0 sqoop


cd $SQOOP_HOME/conf
mv sqoop-env-template.sh sqoop-env.sh
sudo nano sqoop-env.sh
